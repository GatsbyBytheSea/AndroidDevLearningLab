<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/personal_information_page"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/personal_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textFamilyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_family_name_hint"
            android:visibility="visible" />

        <EditText
            android:id="@+id/editTextFamilyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="@string/user_family_name" />

        <TextView
            android:id="@+id/textFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_name_hint"
            android:visibility="visible" />

        <EditText
            android:id="@+id/editTextFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="@string/user_name" />

        <TextView
            android:id="@+id/textBirthPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_birth_place_hint"
            android:visibility="visible" />

        <Spinner
            android:id="@+id/select_birth_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/birth_place"
            android:prompt="@string/birth_place_hint"
            />

        <LinearLayout
            android:id="@+id/birthDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textBirthDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_birth_date_hint"
                android:visibility="visible" />

            <Button
                android:id="@+id/select_birth_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_date"
                android:onClick="selectBirthDate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

    </LinearLayout>


    <Button
        android:id="@+id/submit_personal_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="submit"
        app:layout_constraintBottom_toTopOf="@id/back_to_welcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/submit_button"/>

    <Button
        android:id="@+id/display_personal_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="display"
        app:layout_constraintBottom_toTopOf="@id/submit_personal_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/display_personal_information"/>


    <Button
        android:id="@+id/back_to_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="backToWelcome"
        android:text='@string/back'
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addPhone"
        android:text="@string/add_phone"
        app:layout_constraintTop_toBottomOf="@id/personal_info"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>